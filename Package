package package1;

public class Employee {
    public String name;
    protected double salary;
    private String ssn;

    public void display() {
        System.out.println("Name: " + name + ", Salary: " + salary);
    }
}
package package2;
import package1.Employee;

public class Manager extends Employee {
    public void showDetails() {
        name = "John";        
        salary = 50000;       
        ssn = "12345";     
        display();
    }
}
